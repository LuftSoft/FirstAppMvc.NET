@model List<Post>
@using ASP.NETMVC.Components
@{
    var list_cate = ViewBag.categories;
    Category category = ViewBag.Category as Category;

    ViewData["Title"] = (category != null) ? category.Title : "Tất cả bài viết";
}
<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/">Home</a></li>
        @if (category != null)
        {
            var li = category.ListParents();
            @foreach (var l in li)
            {
                <li class="breadcrumb-item">
                    <a asp-controller="ViewPost" asp-area="Blog" asp-action="Detail"
                asp-route-categoryslug="@l.Slug">@l.Title</a>
                </li>
            }
        }
    </ol>
</nav>
<h1>@ViewData["Title"]</h1>
@if (category != null)
{
    <p>@Html.Raw(category.Description)</p>
}
else
{
    <p>Tất cả bài viết</p>
}
<hr>
@foreach (var post in Model)
{
    <div class="media border-bottom mb-3 pb-3">
        <img src="~/Planet/Earth.jpg" alt="" class="mr-3 img-fluid w-25">
        <div class="media-body">
            <h5 class="mt-0"><a asp-controller="ViewPost" asp-area="Blog" asp-action="Detail"
                asp-route-postslug="@post.Slug">@post.Title</a></h5>
            @post.Description
            <div>
                Chủ đề: <strong class="text-danger">@post.PostCategories.FirstOrDefault().Category.Title</strong>
            </div>
            <div>
                Tác giả: <strong>@post.Author.UserName</strong>
                Ngày cập nhật: <strong>@post.DateUpdated.ToShortDateString()</strong>
            </div>
        </div>
    </div>
}
@section sidebar{
@await Component.InvokeAsync("ASP.NETMVC.Components.CategorySidebar", new CategorySidebar.CategorySidebarData(){
Categories = list_cate,
categorySlug = ViewBag.cSlug,
level = 0
});
}
<partial name="_PagingXTL" model="@ViewBag.paggingmodel" />